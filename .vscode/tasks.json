{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "echo",
            "command": "echo",
            "isShellCommand": true,
            "args": ["Hello World!"],
            "showOutput": "always"
        },
        {
            "taskName": "build",
            "command": "clang++",
            "isShellCommand": true,
            "args": ["-Wall", "${workspaceRoot}/cpp-works/src/main.cpp", "-std=c++11", "-g"],
            "showOutput": "always",
            "options": {
                "cwd": "${workspaceRoot}/build"
            }   
        }
    ]

}